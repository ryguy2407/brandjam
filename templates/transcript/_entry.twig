{% include 'partials/header.twig' %}
<body class="antialiased bg-white overflow-x-hidden font-body">

<div class="container mx-auto relative">
</div>

<header class="relative hidden lg:block">
    <div class="container mx-auto py-16">
        <div class="flex justify-between flex-row items-center">
            <a href="/" class="justify-start">
                <img src="/assets/img/logo-black.svg" alt="Brand Jam">
            </a>
            {% include 'partials/navigation.twig' with { textColour: 'black' } %}
        </div>

    </div>
</header>
<header class="block lg:hidden">
    <div class="container mx-auto py-8">
        <a href="/" class="mx-auto w-full text-center">
            <img src="/assets/img/logo-black.svg" class="mx-auto" alt="Brand Jam">
        </a>
        {% include 'partials/navigation.twig' with { textColour: 'black' } %}
    </div>
</header>

<img class="absolute right-0 hidden xl:block" style="z-index: -1;" src="/assets/img/brandjam-bg-transcript.svg" alt="Brand Jam Watermark">

<div class="container mx-auto px-8 lg:px-0 relative mb-8 lg:mb-32">
    <div class="hidden lg:visible fixed h-screen flex flex-col items-center mt-64" style="margin-left: -40px;">
        <p class="text-black uppercase transform rotate-90">Subscribe</p>
        <a target="_blank" href="https://podcasts.apple.com/au/podcast/brandjam-podcast/id1528668569">
            <i class="far fa-podcast text-black text-3xl mt-16"></i>
        </a>
        <a href="https://open.spotify.com/show/1LLRKiH94RdnTaLuL54ZFk" target="_blank">
            <i class="fab fa-spotify text-black text-3xl mt-4"></i>
        </a>
    </div>

    <div class="flex flex-col lg:flex-row">
        <div class="w-1/6"></div>
        <div class="w-full lg:w-4/6 text-black">
            <p class="font-bold text-black">SERIES 1</p>
            <h1 class="text-5xl text-black lg:text-8xl font-extrabold leading-none mb-8">
                {{ entry.episodeNumber }}
            </h1>
            <h2 class="text-3xl leading-none text-black mt-0 lg:mt-48 lg:text-5xl font-extrabold leading-none">
                {{ entry.episodeTitle }}
            </h2>
            <p class="text-lg text-black font-light leading-none mb-16">
                {{ entry.episodeSubtitle }}
            </p>
            <div class="bg-teal p-2 px-8 text-black font-bold text-lg uppercase inline-block">
                Transcript
            </div>
            <div class="markdown border-2 border-teal bg-white p-8">
                {{ entry.episodeTranscript | markdown }}
            </div>
        </div>
    </div>
</div>

{% include 'partials/footer.twig' %}