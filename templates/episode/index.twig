{% include 'partials/header.twig' %}
<body class="antialiased bg-red overflow-x-hidden font-body">

{% include 'episode/partials/_header.twig' %}

<img class="absolute right-0 hidden xl:block" style="z-index: -1;" src="/assets/img/brandjam-bg-black.svg" alt="Brand Jam Watermark">

<div class="container mx-auto px-8 lg:px-0 text-red relative">
    <div class="invisible lg:visible fixed h-screen flex flex-col items-center mt-64" style="margin-left: -40px;">
        <p class="text-black uppercase transform rotate-90">Subscribe</p>
        <i class="far fa-podcast text-black text-3xl mt-16"></i>
        <i class="fab fa-spotify text-black text-3xl mt-4"></i>
        <i class="fab fa-google text-black text-3xl mt-4"></i>
        <i class="fab fa-soundcloud text-black text-3xl mt-4"></i>
    </div>

    <div class="flex flex-col lg:flex-row mb-8 lg:mb-32">
        <div class="w-1/6"></div>
        <div class="w-full lg:w-4/6 text-black">
            {% set episodes = craft.entries().section('episodes').orderBy('postDate asc').all() %}
            {% for episode in episodes %}
                <a href="{{ episode.url }}" class="episode block {% if not loop.last %}border-black border-b-2{% endif %} w-full">
                    <div class="p-8 flex items-center cursor-pointer">
                        <h2 class="text-black text-4xl lg:text-8xl font-extrabold leading-none w-1/6 mr-16">
                            {{ "%02d"|format(loop.index) }}
                        </h2>
                        <div>
                            <h2 class="text-black text-2xl lg:text-5xl font-extrabold leading-none">
                                {{ episode.title }}
                            </h2>
                            <p class="text-xl text-black">
                                {{ episode.episodeSubheading }}
                            </p>
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
</div>



{% include 'partials/footer.twig' %}